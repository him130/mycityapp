                    android:drawableStart="@drawable/ic_age"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>

