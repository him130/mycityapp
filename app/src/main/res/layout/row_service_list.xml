<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/black_border_white_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rowServiceRequest_llCustomerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:padding="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:background="@drawable/date_round_bg">

                        <TextView
                            android:id="@+id/rowServiceList_tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/rowServiceList_tvMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rowServiceRequest_tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee"
                        android:drawablePadding="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rowServiceRequest_tvContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee"
                            android:drawableStart="@drawable/ic_call"
                            android:drawablePadding="5dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:gravity="center_vertical"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/rowService_list_btnView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/red_round_bg"
                            android:paddingHorizontal="10dp"
                            android:text="Call"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/abeezee" />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/rowServiceRequest_tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee"
                        android:drawableStart="@drawable/ic_address"
                        android:drawablePadding="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rowServiceRequest_tvService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee"
                    android:drawableStart="@drawable/ic_service"
                    android:drawablePadding="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/rowServiceRequest_tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee"
                    android:drawablePadding="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/theme_red"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginVertical="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rowServiceRequest_btnReject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/red_border_white_bg"
                    android:fontFamily="@font/abeezee"
                    android:minHeight="0dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="@string/reject"
                    android:textAllCaps="false"
                    android:textColor="@color/theme_red"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rowServiceRequest_btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_red_bg"
                    android:fontFamily="@font/abeezee"
                    android:minHeight="0dp"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="@string/mark_approved"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
