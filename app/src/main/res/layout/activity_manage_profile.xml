<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ServiceProvider.ServiceProviderProfile.ManageProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/manageProfile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_yellow"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/manage_profile"
                android:fontFamily="@font/abeezee"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/manageProfile_llImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageProfile_toolbar">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/manageProfile_ivProfileImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                app:shapeAppearanceOverlay="@style/circular"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/manageProfile_tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/abeezee"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/manageProfile_tvId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_red"
                    android:fontFamily="@font/abeezee"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/manageProfile_tvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/abeezee"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manageProfile_llInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageProfile_llImage">

            <TextView
                android:id="@+id/manageProfile_tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/manageProfile_tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/manageProfile_tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="50dp"/>

            <TextView
                android:id="@+id/manageProfile_tvAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_age"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/manageProfile_tvMaritalStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_marital_status"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/manageProfile_tvExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_experience"
                android:drawablePadding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="50dp"/>

            <TextView
                android:id="@+id/manageProfile_tvAboutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/about"
                android:drawableStart="@drawable/ic_edit_profile"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/manageProfile_tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/theme_grey"
                android:textSize="16sp"
                android:drawablePadding="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="50dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/manageProfile_btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_white_bg"
                android:fontFamily="@font/abeezee"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/edit_profile"
                android:textAllCaps="false"
                android:textColor="@color/theme_red"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/manageProfile_btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_white_bg"
                android:fontFamily="@font/abeezee"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/change_password"
                android:textAllCaps="false"
                android:textColor="@color/theme_red"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/manageProfile_btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border_red_bg"
                android:fontFamily="@font/abeezee"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/manageProfile_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/theme_grey"
            android:translationZ="@dimen/cardview_compat_inset_shadow"
            android:visibility="gone"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>