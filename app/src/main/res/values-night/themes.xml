<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ServiceShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/theme_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ServiceShop.NoActionBar" parent="Theme.ServiceShop">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="marginHorizontal">0dp</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="Theme.ServiceShop.BottomMenuActiveText" parent="Theme.ServiceShop">
        <item name="android:textColor">@color/theme_red</item>
    </style>
    <style name="Theme.ServiceShop.Switch" parent="Theme.ServiceShop">
        <item name="colorControlActivated">#21E30B</item>
    </style>
    <style name="Theme.ServiceShop.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="Theme.ServiceShop.SpinnerItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Theme.ServiceShop.SpinnerItemStyleStart" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/abeezee</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/theme_red</item>
    </style>
</resources>